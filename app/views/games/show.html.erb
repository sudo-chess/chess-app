
<br/>
<div id="action_box" class="col-10 offset-4 row">
<h4> Next move: &nbsp; &nbsp;</h4>
  <% if @game.next_player_id == @game.white_player.id %>
   <h4> <%= "White Player" %> </h4>
  <% else %>
   <h4><%= "Black Player" %> </h4>
  <% end %>
</div>
<hr/>
<div id="game_board" data-current_player=<%= current_user.id %> data-move_player=<%= @game.next_player_id %> data-white_player=<%= @game.white_player.id %> class="col-10 offset-4">

  <table class="chessboard">

    <% (1..8).to_a.reverse.each do |row_number| %>
      <tr>
        <% ["A","B","C","D","E","F","G","H"].each_with_index do |rank , index| %>
          <% piece = @pieces.find {|piece| piece.position_y == row_number && piece.position_x == index+1} %>

          <% if row_number.odd? %>
            <% if index.even? %>
              <td class="black tile droppable draggable" data-position_x=<%= index+1 %> data-position_y=<%= row_number %> data-piece-id= <%= piece ? piece.id : nil %> data-type=<%= piece ? piece.type : nil %>>
                <%= check_piece(index + 1, row_number) %>
              </td>
            <% else %>
              <td class="white tile droppable draggable "  data-position_x=<%= index+1 %> data-position_y=<%= row_number %> data-piece-id= <%= piece ? piece.id : nil %> data-type=<%= piece ? piece.type : nil %>>
                <%= check_piece(index + 1, row_number) %>
              </td>
            <% end %>
          <% else %>
            <% if index.even? %>
              <td class="white tile droppable draggable" data-position_x=<%= index+1 %> data-position_y=<%= row_number %> data-piece-id= <%= piece ? piece.id : nil %> data-type=<%= piece ? piece.type : nil %>>
                <%= check_piece(index + 1, row_number) %>
              </td>
            <% else %>
              <td class="black tile droppable draggable" data-position_x=<%= index+1 %> data-position_y=<%= row_number %> data-piece-id= <%= piece ? piece.id : nil %> data-type=<%= piece ? piece.type : nil %>>
                <%= check_piece(index + 1, row_number) %>
              </td>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </table>

</div>
<br class="clear"/>
<hr/>
<% if @game.result == nil %>
      <h4 >Available actions: &nbsp; &nbsp; </h4>
  <div id="action_box" class="col-10 offset-4 row">
      <%= link_to 'Forfeit', forfeit_game_path(@game), method: :post, style: "margin-left: 10px", class: 'btn btn-primary btn-danger',data: {confirm: 'Are you sure?'} %>
    </div>
  </div>
<% end %>
<br/>
<div id="action_box" class="col-10 offset-4 row">
  <h4>King in Check: &nbsp; &nbsp;</h4>
  <% color = "white" %>
  <% if @local_game.next_player_id == @local_game.black_player.id %>
    <% color = "black" %>
    <% if @local_game.player_in_check?(color) %>
      <h4>Yes</h4>
    <% else %>
      <h4>No</h4>
    <% end %>
  <% end %>
</div>
 <br/>
<div id="action_box" class="col-10 offset-4 row">
  <h4>King in Checkmate: &nbsp; &nbsp;</h4>
  <% color = "white" %>
  <% if @local_game.next_player_id == @local_game.black_player.id %>
    <% color = "black" %>
    <% if @local_game.player_checkmate?(color) %>
      <h4>Yes</h4>
    <% else %>
      <h4>No</h4>
    <% end %>
  <% end %>
</div>
<br/>
<div id="action_box" class="col-10 offset-4 row">


  <h4>King in Stalemate: &nbsp; &nbsp;</h4>
